{
  "name": "project-analysis",
  "displayName": "project analysis",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "project-analysis.refresh",
        "title": "Refresh Project Analysis",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "project-analysis",
          "title": "Project Analysis",
          "icon": "assets/logo.svg"
        }
      ]
    },
    "views": {
      "project-analysis": [
        {
          "id": "project-analysis-view",
          "name": "Project Structure"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "project-analysis.refresh",
          "when": "view == project-analysis-view",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Project Analysis",
      "properties": {
        "projectAnalysis.excludeFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            "vscode"
          ],
          "description": "Folders to exclude from the analysis."
        },
        "projectAnalysis.includeFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Specific folders to include in the analysis. If not empty, only these folders will be analyzed."
        },
        "projectAnalysis.includeExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "File extensions to include in the analysis (e.g., [\".js\", \".ts\"]). Leave empty to include all except excluded extensions."
        },
        "projectAnalysis.excludeExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "File extensions to exclude from the analysis (e.g., [\".md\", \".json\"]). Applied only when includeExtensions is empty."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "esbuild-node-externals": "^1.13.1",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
